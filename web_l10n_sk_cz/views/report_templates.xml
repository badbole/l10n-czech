<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="external_layout_standard" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@name='company_address']" position="replace">
                <div class="col-6" name="company_address">
                    <ul class="list-unstyled">
                        <li t-if="company.company_details">
                            <t t-esc="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "vat", "is_vat_payer", "tax_id", "company_registry"], "no_marker": true}'/>
                        </li>
                        <li t-if="forced_vat">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>
:
                            <span t-esc="forced_vat"/>
                        </li>
                    </ul>
                </div>
            </xpath>
            <!-- Initial code with our updates DOESN`T ensure that the address is not cropped by the header. -->
            <xpath expr="//div[@class='pt-5']" position="before">
                <br/>
                <br/>
                <br/>
            </xpath>
        </template>


        <template id="external_layout_striped" inherit_id="web.external_layout_striped">
            <xpath expr="//div[@class='float-start company_address']" position="replace">
                <div class="float-start company_address">
                    <ul class="list-unstyled" t-if="company.company_details or forced_vat">
                        <li t-if="company.company_details">
                            <t t-esc="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "vat", "is_vat_payer", "tax_id", "company_registry"], "no_marker": true}'/>
                        </li>
                        <li t-if="forced_vat">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>
:
                            <span t-esc="forced_vat"/>
                        </li>
                    </ul>
                </div>
            </xpath>
            <xpath expr="//t[@t-call='web.address_layout']" position="replace">
                <div class="pt-5">
                    <br/>
                    <t t-call="web.address_layout"/>
                </div>
            </xpath>
        </template>

        <template id="external_layout_bold" inherit_id="web.external_layout_bold">
            <xpath expr="//div[@name='company_address']" position="replace">
                <div class="col-5 offset-1" name="company_address">
                    <ul class="list-unstyled">
                        <li t-if="company.company_details">
                            <t t-esc="company.partner_id" t-options='{"widget": "contact", "fields": ["name", "vat", "is_vat_payer", "tax_id", "company_registry"], "no_marker": true}'/>
                        </li>
                        <li t-if="forced_vat">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>
:
                            <span t-esc="forced_vat"/>
                        </li>
                        <li t-if="company.phone">Tel: <span class="o_force_ltr" t-field="company.phone"/>
                        </li>
                        <li t-if="company.email">
                            <span t-field="company.email"/>
                        </li>
                        <li t-if="company.website">
                            <span t-field="company.website"/>
                        </li>
                    </ul>
                </div>
            </xpath>
            <!-- This div ensures that the address is not cropped by the header. -->
            <xpath expr="//t[@t-call='web.address_layout']" position="replace">
                <div class="pt-5">
                    <br/>
                    <t t-call="web.address_layout"/>
                </div>
            </xpath>
        </template>

        <template id="external_layout_boxed" inherit_id="web.external_layout_boxed">
            <xpath expr="//div[@name='company_address']" position="replace">
                <div name="company_address" class="float-right mb4">
                    <ul class="list-unstyled" t-if="company.company_details or forced_vat">
                        <li t-if="company.company_details">
                            <t t-esc="company.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "vat", "is_vat_payer", "tax_id", "company_registry"], "no_marker": true}'/>
                        </li>
                        <li t-if="forced_vat">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>
:
                            <span t-esc="forced_vat"/>
                        </li>
                    </ul>
                </div>
            </xpath>
            <xpath expr="//div[@class='pt-5']" position="before">
                <br/>
            </xpath>
        </template>
    </data>
</odoo>