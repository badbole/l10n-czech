<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-set='address']" position="replace">
                <t t-set="address">
                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "vat", "company_registry", "tax_id"], "no_marker": True}' />
                </t>
            </xpath>
            <xpath expr="//div[@name='so_total_summary']" position="after">
                <div t-if="doc.company_id.registration_info" class="row" name="notes">
                    <div class="row">
                        <div class="col-12">
                            <div class="mt32">
                                <strong>Note</strong>
                            </div>
                            <hr />
                            <div class="mt32">
                                <t t-esc="doc.company_id.registration_info"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>