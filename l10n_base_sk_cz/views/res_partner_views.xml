<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="before">
                    <xpath expr="//field[@name='company_registry']" position="move"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="localization_country" invisible="1"/>
                    <field name="tax_id" attrs="{'invisible': [('localization_country', '!=', 'SK')]}"/>
                    <field name="is_vat_payer"/>
                </xpath>
                <xpath expr="//field[@name='title']" position="after">
                    <field name="vocative" attrs="{'invisible': [('is_company', '=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>