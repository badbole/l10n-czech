<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_bank_statement_form_inherit" model="ir.ui.view">
            <field name="name">account.bank.statement.inherit</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='account_number']" position="after">
                    <field name="variable_symbol" optional="hidden"/>
                    <field name="constant_symbol" optional="hidden"/>
                    <field name="specific_symbol" optional="hidden"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>